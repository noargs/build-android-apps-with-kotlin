<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context=".StyleFragment">

   <TextView
       android:id="@+id/hello_world"
       android:layout_width="wrap_content"
       android:layout_height="0dp"
       android:text="@string/hello_world"
       android:textSize="34sp"
       android:paddingBottom="12dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bold_button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/bold_text"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/italic_button"
        app:layout_constraintTop_toBottomOf="@id/hello_world" />

    <Button
        android:id="@+id/italic_button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/italic_text"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/hello_world"
        app:layout_constraintStart_toEndOf="@id/bold_button"
        app:layout_constraintEnd_toStartOf="@id/reset_button" />

    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/reset"
        android:textSize="26sp"
        app:layout_constraintTop_toBottomOf="@id/hello_world"
        app:layout_constraintStart_toEndOf="@id/italic_button"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>